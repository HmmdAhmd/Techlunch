@using TechlunchApp.ViewModels

@model IEnumerable<IngredientViewModel>
@{
    ViewData["Title"] = "All Ingredients";
    int i = 1;
}

<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0">Ingredients</h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Ingredients</a></li>
                                <li class="breadcrumb-item active">Show All</li>
                            </ol>
                        </div>

                    </div>
                </div>
            </div>
            <!-- end page title -->


            <div class="row">
                <div class="col-12">
                    @* @if (ViewBag.Message != null && ViewBag.Message == "success")
                    {
                    <div class="alert alert-success">Food item added succesfully.</div>
                    }else if(ViewBag.Message != null && ViewBag.Message == "error"){
                    <div class="alert alert-success">Food item added succesfully.</div>
                    }*@

                    <div class="card">
                        <div class="card-header align-items-center d-flex">
                            <h4 class="card-title mb-0 flex-grow-1">Ingredients</h4>
                            <div class="flex-shrink-0">
                                <div class="form-check form-switch form-switch-right form-switch-md">
                                    <a class="btn btn-primary" href="/ingredients/create">Add Ingredient</a>
                                </div>
                            </div>
                        </div><!-- end card header -->

                        <div class="card-body">

                            <div class="live-preview">
                                <div class="table-responsive">
                                    <table class="table align-middle table-nowrap mb-0">
                                        <thead>
                                            <tr>
                                                <th scope="col">No.</th>
                                                <th scope="col">Name</th>
                                                <th scope="col">Action</th>
                                                <th scope="col"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var r in Model)
                                            {
                                                <tr>
                                                    <th>@i</th>
                                                    <td>@r.Name</td>
                                                    <td>
                                                        <a class="edit-btn" href="/ingredients/edit/@r.Id">Edit</a>
                                                        |
                                                        <form asp-action="Delete" method="post" style="display:inline-block;">
                                                            <input type="hidden" value="@r.Id" name="id" />
                                                            <input type="submit" class="link-danger delete-btn" value="Delete" />
                                                        </form>
                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>


                        </div>
                    </div><!-- end card-body -->
                </div><!-- end card -->
            </div>
            <!-- end col -->
        </div>
    </div>
</div>